<Window
    x:Class="RexMingla.Clippy.WpfApplication.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="Clippy" 
    Height="300"
    Width="300"
    Icon="images/Clipboard_32x32.ico">
    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon" ToolTipText="Clippy" TrayContextMenuOpen="TrayContextMenuOpen">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu></ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>