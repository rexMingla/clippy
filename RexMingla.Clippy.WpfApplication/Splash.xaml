<Window x:Class="RexMingla.Clippy.WpfApplication.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RexMingla.Clippy.WpfApplication"
        mc:Ignorable="d"
        Title="Welcome to Clippy" Height="300" Width="300"
        Icon="/images/clipboard.png">
    <Grid>
        <Image Width="300" ContextMenuOpening="CreateContentMenu">
            <Image.ContextMenu>
                <!-- https://msdn.microsoft.com/en-us/library/Bb613568(v=vs.100).aspx -->
                <ContextMenu>
                    <MenuItem>Initial menu; this will be replaced ...</MenuItem>
                </ContextMenu>
            </Image.ContextMenu>
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/images/clipboard.png" />
            </Image.Source>
        </Image>
    </Grid>
</Window>
